{
  "definition": {
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "actions": {
      "Get_secret": {
        "type": "ServiceProvider",
        "inputs": {
          "parameters": {
            "secretName": "my-super-secret"
          },
          "serviceProviderConfiguration": {
            "connectionName": "keyVault",
            "operationId": "getSecret",
            "serviceProviderId": "/serviceProviders/keyVault"
          }
        },
        "runAfter": {
          "Initialize_variable": [
            "SUCCEEDED"
          ]
        }
      },
      "Initialize_variable": {
        "type": "InitializeVariable",
        "inputs": {
          "variables": [
            {
              "name": "another_super_secret",
              "type": "string",
              "value": "@{parameters('another_super_secret')}"
            }
          ]
        },
        "runAfter": {}
      }
    },
    "contentVersion": "1.0.0.0",
    "outputs": {},
    "triggers": {
      "When_a_HTTP_request_is_received": {
        "type": "Request",
        "kind": "Http"
      }
    }
  },
  "connectionReferences": {
    "keyVault": {
      "connection": {
        "id": "/serviceProviders/keyVault/connections/keyVault"
      },
      "connectionName": "keyvault-connection",
      "api": {
        "id": "/serviceProviders/keyVault"
      }
    }
  },
  "parameters": {
    "another_super_secret": {
      "type": "String",
      "value": "@appsetting('another_super_secret')"
    }
  }
}